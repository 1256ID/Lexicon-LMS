@inject NavigationManager Navigation

<div class="d-flex justify-content-center mb-4 flex-wrap" style="gap: 1rem;">
    @foreach (var btn in Buttons)
    {
        <button class="btn @GetButtonClass(btn.Url) col-auto" @onclick="() => Navigate(btn.Url)">
            @btn.Label
        </button>
    }
</div>

@code {
    private List<NavButton> Buttons = new List<NavButton>
    {
        new NavButton { Label = "Activity", Url="/activity" },
        new NavButton { Label = "Documents", Url="/module/documents" }
    };

    private void Navigate(string url)
    {
        Navigation.NavigateTo(url);
    }

    private string GetButtonClass(string url)
    {
        var isActive = Navigation.Uri.EndsWith(url, StringComparison.OrdinalIgnoreCase);
        return $"btn-primary {(isActive ? "active" : "")}";
    }

    private class NavButton
    {
        public string Label { get; set; }
        public string Url { get; set; }
    }
}
