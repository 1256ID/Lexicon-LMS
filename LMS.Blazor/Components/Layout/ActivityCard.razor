@inject NavigationManager Navigation

<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card h-100 shadow-sm hover-card" style="border-radius: 0.8rem; cursor: pointer; transition: all 0.3s ease;"> <!--@onclick="OpenActivity"-->  
        <div class="card-body d-flex flex-column p-4">
            <h6 class="card-subtitle mb-2 text-muted">Activity Type</h6> <!-- @Activity.Type -->
            <h5 class="card-title fw-bold mb-3 border-bottom pb-2" style="color: #1b6ec2;">
                Activity Name <!-- @Activity.Name -->
            </h5>

            <p class="card-text flex-grow-1" style="min-height: 60px; overflow: hidden;">
                Activity Description <!-- @Activity.Description -->
            </p>

            <div class="mt-auto pt-3">
                <div class="bg-light rounded p-2">
                    <small class="text-muted">
                        <strong>📅 Start:</strong> YYYY/MM/DD<br>
                        <strong>🏁 End:</strong> YYYY/MM/DD
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

