@page "/student/overview"
@rendermode InteractiveWebAssembly

@using LMS.Blazor.Client.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@attribute [Authorize]

<AuthorizeView Roles="Student">
    <Authorized>
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- Welcome card -->
                    <div class="card shadow-sm border-0 rounded-3 mb-4 text-center">
                        <div class="card-body">
                            <img src="https://via.placeholder.com/120"
                                 class="rounded-circle d-block mx-auto mt-3 mb-3 border border-3 border-primary"
                                 alt="Profile placeholder"
                                 width="120" height="120">

                            <h2 class="card-title text-primary">
                                Welcome, @context.User.Identity?.Name 
                            </h2>
                            <p class="card-text text-muted">
                                Continue your learning to achieve your target.
                            </p>
                        </div>
                    </div>

                    <!-- Schedule card -->
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h3 class="card-title mb-3">
                                <i class="bi bi-calendar-event me-2 text-secondary"></i>
                                Upcoming schedule
                            </h3>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Aug 16 — C# OOP Lab</li>
                                <li class="list-group-item">Aug 18 — React Project Presentation</li>
                                <li class="list-group-item">Aug 22 — SQL Basics Test</li>
                                <li class="list-group-item">Aug 24 — Team Meeting: Project Planning</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>



